<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.yogidev.android.mytennisapp"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon1" android:label="@string/app_name" android:allowBackup="True">
        <activity android:name=".MyTennisApp" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
        <activity android:name=".NewPlayerActivity" android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name=".NewEpreuveActivity"></activity>
        <activity android:name=".NewRencontreActivity" android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name=".PalmaresActivity"></activity>
		<activity android:name=".SimulationActivity"></activity>
		<activity android:name=".DisplayCalculRules" android:screenOrientation="landscape"></activity>
    </application>
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="21"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest> 